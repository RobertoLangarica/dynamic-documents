{
  "name": "backend",
  "version": "0.0.5",
  "description": "",
  "author": "Roberto Langarica <roberto@wizardforyou.com>",
  "repository": "https://github.com/RobertoLangarica/dynamic-documents.git",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=dev nest start",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --debug --watch",
    "start:prod": "node dist/main",
    "bash": "./start_image.sh -it /bin/sh",
    "dev": "./start_image.sh",
    "debug": "./start_image.sh npm run start:debug",
    "release": "./start_image.sh -r",
    "stop": "docker rm $(docker stop dd_back)",
    "stop:release": "docker rm $(docker stop dynamicdocs_api)",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cd ./test && jest --config ./jest-e2e.json --silent=false && cd ..",
    "typeorm": "ts-node --transpile-only --files -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config database/cli-config.ts",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:create": "npm run typeorm -- migration:create -n ",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:refresh": "npm run typeorm -- schema:drop && npm run migration:run",
    "migration:generate": "npm run typeorm -- migration:generate -n ",
    "create:user": "node database/create-user",
    "start:db": "./start_db.sh -n dd_back_net",
    "stop:db": "docker rm $(docker stop db_server)"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/swagger": "^4.3.1",
    "@nestjs/typeorm": "^6.2.0",
    "aws-sdk": "^2.624.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "latest",
    "class-validator": "latest",
    "curl": "^0.1.4",
    "puppeteer": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "sha256": "^0.2.0",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^12.7.5",
    "@types/puppeteer": "^5.4.3",
    "@types/supertest": "^2.0.8",
    "dotenv": "^8.2.0",
    "jest": "^26.0.0",
    "pg": "^7.18.2",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
